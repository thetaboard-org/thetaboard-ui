{{page-title "Login"}}


<div class="card login-card">
    <div class="logo">
        <img class="thetaboard-logo" src="{{rootURL}}assets/img/thetaboard-logo.png"/>
    </div>
    <div class="card-body">
    <h4 class="card-title">Login</h4>
    <div class="row">
        <div class="col-md-6" style=" margin: auto;">
            <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" style="text-align:center;" value="">
            </div>
        </div>
        </div>
    <div class="row">
        <div class="col-md-6" style=" margin: auto;">
            <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" style="text-align:center;" value="">
            </div>
        </div>
        </div>
    <a href="#" class="btn btn-primary">Login</a>
    <br/>
    <br/>
    <p class="card-text">Or</p>
    <div class="col-md-6" style=" margin: auto;">
        <div class="social-login">
            <img src="{{rootURL}}assets/img/google.svg" width="17px" /> 
            <span>Login with Google</span>
        </div>

        <div class="social-login">
            <img src="{{rootURL}}assets/img/facebook.png" width="17px" /> 
            <span>Login with Facebook</span>
        </div>

        <div class="social-login">
            <img src="{{rootURL}}assets/img/twitter.png" width="17px" /> 
            <span>Login with Twitter</span>
        </div>

        <div class="social-login">
            <img src="{{rootURL}}assets/img/github.png" width="17px" /> 
            <span>Login with Github</span>
        </div>
    </div>
    <LinkTo @class="nav-link" @route="signup">Sign up for an account</LinkTo>
  </div>
</div>