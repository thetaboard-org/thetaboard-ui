{{page-title "Login"}}


<div class="card login-card" style="margin: 80px auto;">
    {{navbar/i18n-selection}}
    <div class="logo">
        <LinkTo @route='landing' @class="">
            <img class="thetaboard-logo" src="{{rootURL}}assets/img/thetaboard-logo.png"/>
        </LinkTo>
    </div>
    <div class="card-body">
    <h4 class="card-title">{{t 'global.login'}}</h4>
        <form {{on 'submit' this.authenticate}}>
            {{#each this.errorMessages as |error|}}
                <div class="row">
                    <div class="col-md-6" style=" margin: auto;">
                        <div class="alert alert-warning" style="padding: 10px;">
                            <span>{{t error.message}}</span>
                        </div>
                    </div>
                </div>
            {{/each}}
            <div class="row">
                <div class="col-md-6" style=" margin: auto;">
                    <div class="form-group">
                    <Input @type="email" required minlength="6" @class="form-control" @placeholder={{t 'global.email'}} style="text-align:center;" @value={{email}}/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6" style=" margin: auto;">
                    <div class="form-group">
                    <Input @type="password" required minlength="6" @class="form-control" @placeholder={{t 'global.password'}} style="text-align:center;" @value={{password}}/>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">{{t 'global.login'}}</button>
        </form>
    <br/>
    <LinkTo @class="nav-link" @route="signup">{{t 'login.no_account'}}</LinkTo>
    <LinkTo @class="nav-link" @route="resetpassword">{{t 'login.cant_login'}}</LinkTo>
  </div>
</div>