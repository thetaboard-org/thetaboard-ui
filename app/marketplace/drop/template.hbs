{{page-title "Drop"}}

<div class="card card-user" id="card-drop">
  <div class="card-body card-min-390">
    <p class="card-text"></p>
    <div class="author">
      <div class="block block-one"></div>
      <div class="block block-two"></div>
      <div class="block block-three"></div>
      <div class="block block-four"></div>
    </div>
    <div class="card-body-stake">
      <h5 class="title">{{drop.name}}</h5>
      <div class="justify-content-lg-center justify-content-md-center">
        {{#if drop.isDropLive}}
            <div class="drop-status live"><span class="dot"></span>{{t 'drop.is_live'}}</div>
        {{else if drop.isDropEnded}}
            <div class="drop-status over">{{t 'drop.over'}}</div>
        {{else}}
            <div class="drop-status coming">{{t 'drop.coming_soon'}}</div>
        {{/if}}
      </div>
      {{!-- <div class="artist-container">
        <p class="drop-artist">{{drop.artist.name}}</p>
        <img src="{{drop.artist.image}}" width="60px" height="60px" alt="{{drop.artist.name}}"/>
      </div> --}}
      <p class="description">{{drop.description}}</p>
    </div>
  </div>
  <div class="card-footer">
  </div>
</div>