{{page-title "Drops"}}

<div class="card card-user" id="card-drops">
  <div class="card-body card-min-390">
    <p class="card-text"></p>
    <div class="author">
      <div class="block block-one"></div>
      <div class="block block-two"></div>
      <div class="block block-three"></div>
      <div class="block block-four"></div>
    </div>
    <div class="card-body-stake">
      <h5 class="title">{{t 'drop.title'}}</h5>
      <div class="row justify-content-lg-center justify-content-md-center">
        <label>{{t 'drop.subtitle'}}</label>
      </div>
      <div class="row">
        {{#each dropList as |drop|}}
          <div class="col-sm-12 col-md-4 drop-tile-container">
            {{marketplace/drop-tile drop=drop}}
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="card-footer">
  </div>
</div>