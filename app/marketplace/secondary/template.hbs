{{page-title "Secondary"}}
<div class="card card-user">
  <div class="card-body card-min-390">
    <h1 class="card-title">Marketplace - Exchange</h1>
  </div>
</div>

<div class="card card-user">
  <div class="card-body card-min-390">
    <Input @placeholder="Search" @type="text" @value={{search}}  {{on "keyup" this.searchMarketplace}}
    />
    <br>
    <PowerSelectMultiple
      @searchEnabled={{true}}
      @searchField="name"
      @options={{this.artists}}
      @selected={{this.selectedArtists}}
      @onChange={{this.changeArtist}} as |artist|>
      {{artist.name}}
    </PowerSelectMultiple>

    <PowerSelectMultiple
      @searchEnabled={{true}}
      @searchField="name"
      @options={{this.drops}}
      @selected={{this.selectedDrops}}
      @onChange={{this.changeDrop}} as |drop|>
      {{drop.name}}
    </PowerSelectMultiple>

    <PowerSelectMultiple
      @searchEnabled={{true}}
      @options={{this.priceRanges}}
      @selected={{this.selectedPriceRanges}}
      @onChange={{this.changePriceRange}} as |priceRange|>
      {{priceRange}}
    </PowerSelectMultiple>

    <PowerSelect
      @options={{this.sortBy}}
      @searchField="name"
      @selected={{this.selectedSortBy}}
      @onChange={{this.changeSortBy}} as |sortBy|>
      {{sortBy.name}}
    </PowerSelect>
  </div>
</div>

<div class="tile-container-market">
  {{#each sellingNFTs as |NFT|}}
    {{marketplace/secondary/nft nft=NFT}}
  {{/each}}
</div>

{{#if showPagination}}
  <PaginationPager
    @pager={{true}}
    @count={{totalPageNumber}}
    @current={{currentPageNumber}}
    @change={{this.pageChanged}}
    @pagerFirst="|<"
    @pagerLast=">|"
    @pagerNext={{t 'global.next'}}
    @pagerPrevious={{t 'global.previous'}}>
    {{currentPageNumber}} of {{totalPageNumber}}
  </PaginationPager>
{{/if}}