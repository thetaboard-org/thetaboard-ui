{{page-title "Reset password"}}

<div class="card login-card" style="margin: 80px auto;">
  {{navbar/i18n-selection}}
  <br/>
  <div class="logo">
    <LinkTo @route='landing' @class="">
      <img class="thetaboard-logo" src="{{rootURL}}/assets/img/thetaboard-logo.png"/>
    </LinkTo>
  </div>
  <div class="card-body">
    <h4 class="card-title">{{t 'reset_pass.reset_pass'}}</h4>
    {{#if resetPasswordLinkSent}}
      <label>{{t 'reset_pass.submission_received'}}</label>
      <br/>
      <p>{{t 'reset_pass.will_receive_email'}}</p>
    {{else}}
      <form {{on 'submit' this.resetPassword}}>
                <div class="row">
                    <div class="col-md-6" style=" margin: auto;">
                        <div class="form-group">
                        <Input @type="email" required minlength="6" @class="form-control" @placeholder={{t 'global.email'}} style="text-align:center;" @value={{email}}/>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">{{t 'reset_pass.reset_pass'}}</button>
            </form>
        {{/if}}
        <br/>
        <LinkTo @class="nav-link" @route="signup">{{t 'reset_pass.no_account_yet'}}</LinkTo>
        <br/><br/>
    </div>
</div>