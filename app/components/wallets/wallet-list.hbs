<div class="card">
    <div class="card-header">
        <h4 class="card-title"> Holdings</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive wallet-list-table">
        <table class="table">
            <thead>
            <tr>
            <th class="text-center">#</th>
            <th class="text-center d-none d-sm-none d-md-table-cell">Type</th>
            <th class="text-center">Wallet Address</th>
            <th class="text-center d-none d-sm-none d-md-none d-lg-table-cell">Market Price</th>
            <th class="text-center">Amount</th>
            <th class="text-center">In $</th>
            </tr>
            </thead>
            <tbody>
            {{#each walletList as |balance|}}
            <tr>
                <td class="text-center">
                <img src="{{rootURL}}assets/img/logo/{{balance.currency}}.png"
                        class="img-fluid rounded-circle" style="width: 20px;min-width: 20px;">
                </td>
                <td class="text-center d-none d-sm-none d-md-table-cell">{{balance.type}}</td>
                <td class="text-center ">
                    <LinkTo {{shortener balance.wallet_address}} @route="wallet" @query={{hash wa=balance.wallet_address}}>{{balance.wallet_address}}</LinkTo>
                    {{#if balance.node_address}}
                        <br/>Node Address:<br/>
                        <LinkTo {{shortener balance.node_address}} @route="wallet" @query={{hash wa=balance.node_address}}>{{balance.node_address}}</LinkTo>
                    {{/if}}
                </td>
                <td class="text-center d-none d-sm-none d-md-none d-lg-table-cell">$<span class="nostyle" {{numberformat balance.market_price 2}}></span></td>
                <td class="text-center"><span class="nostyle" {{numberformat balance.amount 3}}></span></td>
                <td class="text-right">$<span class="nostyle" {{numberformat balance.value 2}}></span></td>
            </tr>
            {{else}}
            <p>No wallet, please <LinkTo @route="my-wallets">link your wallet</LinkTo> or <a href="" data-toggle="modal" data-target="#searchModal">enter an address</a>.</p>
            {{/each}}
            </tbody>
        </table>
        <div style="text-align: right;">
            {{wallets/wallet-total}}
        </div>
        </div>
    </div>
</div>