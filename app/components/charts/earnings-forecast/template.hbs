<div class="card card-chart card-user">
  <div class="card-header ">
    <div class="row">
      <div class="col-sm-12 text-left">
        <p class="card-text"></p>
        <div class="author">
          <div class="block block-one"></div>
          <div class="block block-two"></div>
          <div class="block block-three"></div>
          <div class="block block-four"></div>
          <img class="avatar" src="{{rootURL}}/assets/img/logo/theta.png" alt="..."/>
          <h2 class="card-title forecast-title">{{t 'reward_forecast.title_theta'}} {{setUpChart}}</h2>

          <br/>
          <p class="form-inline forecast-amout-inline">{{t 'reward_forecast.subtitle'}}
          <Input
                  @type="number"
                  @value={{thetaAmount}}
                  @class="form-control theta-ammout-forecast"
                  {{on "keyup" this.updateData}}
          />
          Theta </p>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div id="forecast-chart-container">
      <canvas id="forecastChart" height="239" {{did-insert this.setupChart}}></canvas>
    </div>
    <div class="forecast-legend">
      <p class="forcast-earning-title">{{t 'reward_forecast.estimated_earning' token='Tfuel'}}:</p>
      <div class="row">
        <div class="col-sm-4">
          <span class="legend-label"> {{t 'reward_forecast.per_day'}}:</span> <br>
          <span class="amount"><span class="nostyle" {{numberformat avg_tfuel_per_day 2}}></span><img
                  src="assets/img/logo/tfuel.png" style="width: 15px; margin-left: 3px; vertical-align: unset;"></span>
          <br>
          {{currency.currentCurrency.symbol}}<span class="amount" {{numberformat avg_tfuel_per_day_dollar 2}}></span>
        </div>
        <div class="col-sm-4">
          <span class="legend-label"> {{t 'reward_forecast.per_month'}}:</span> <br>
          <span class="amount"><span class="nostyle" {{numberformat avg_tfuel_per_month 2}}></span><img
                  src="assets/img/logo/tfuel.png" style="width: 15px; margin-left: 3px; vertical-align: unset;"></span>
          <br>
          {{currency.currentCurrency.symbol}}<span class="amount" {{numberformat avg_tfuel_per_month_dollar 2}}></span>
        </div>
        <div class="col-sm-4">
          <span class="legend-label"> {{t 'reward_forecast.per_year'}}:</span> <br>
          <span class="amount"><span class="nostyle" {{numberformat avg_tfuel_per_year 2}}></span><img
                  src="assets/img/logo/tfuel.png" style="width: 15px; margin-left: 3px; vertical-align: unset;"></span>
          <br>
          {{currency.currentCurrency.symbol}}<span class="amount" {{numberformat avg_tfuel_per_year_dollar 2}}></span>
        </div>
      </div>
    </div>
    <br/>
      <sub> </sub>
  </div>
</div>