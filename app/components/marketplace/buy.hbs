{{#if nft.isAuction}}
  {{#async-await this.minBid as |minBid|}}
    <Input required @type="number" @min="{{minBid}}" value={{this.bid}} {{on "change" this.updateBid}} />
    <button class="nft-button btn btn-primary" {{action "placeBid" nft}}>Place Bid</button>
  {{else}}
    loading
  {{/async-await}}
{{else}}
  <button class="nft-button btn btn-primary" {{action "buy" nft}}>{{t 'drop.buy'}}</button>
  <p style="font-size: 12px">
    Or send exactly {{nft.price_id}} Tfuels to "0xBDfc0c687861a65F54211C55E4c53A140FE0Bf32"
  </p>
{{/if}}
