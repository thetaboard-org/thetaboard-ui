{{#if offerPanel}}
  <p>Make an Offer</p>
  <p></p>
  <form {{on 'submit' this.makeOffer}}>
    <Input
      @placeholder="Enter amount"
      @type="number" min="1" class="form-control border-color input-domain-transfer-address"
      @value={{offerPrice}}
      required></Input>
    <p></p>
    {{#if offering}}
      <img width="40" src="/assets/img/loader.gif"/>
    {{else if commitingToTransfer}}
      <img width="40" src="/assets/img/see-mm-small.png"/>
      <img class="btn-icon-global right-margin" {{on 'click' toggleOfferPanel}}
           src="/assets/img/cancel-small.png"/>
    {{else}}
      <img class="btn-icon-global" type="image" src="/assets/img/ok-small.png" {{on 'click' this.makeOffer}}>
      <img class="btn-icon-global right-margin" {{on 'click' toggleOfferPanel}}
           src="/assets/img/cancel-small.png"/>
    {{/if}}
    <br/><br/>
  </form>
{{else}}
  <span data-toggle="tooltip" data-placement="top" title="Make an offer">
    <button type="button" class="button-icon-tb btn btn-fill btn-primary" {{on 'click' toggleOfferPanel}}>
        <i class="icon-tb icon-transfer"></i>
    </button>
    </span>
{{/if}}