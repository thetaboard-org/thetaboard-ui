<div class="card card-user" style="height: 95%;">
  <div class="card-body card-min-390">
    <p class="card-text"></p>
    <div class="author">
      <div class="block block-one"></div>
      <div class="block block-two"></div>
      <div class="block block-three"></div>
      <div class="block block-four"></div>
      <img class="avatar" src="{{rootURL}}assets/img/logo/theta.png" alt="...">
    </div>
      <div class="card-body-stake">
        <h5 class="title">Theta</h5>
          <div class="trend-activity">
            <p class="title current-price">$<span class="nostyle" {{numberformat this.thetaSdk.prices.theta.price 2}}></span></p>
        </div>
        <div class="trends-percent-conatiner">
          <div class="trend-activity trends-percent border-separation">
              <p class="description">Last 24h</p>
              <p class="title {{trendYesterday.class}}">{{trendYesterday.type}} {{trendYesterday.percentChange}}% </p>
              <span class="trend-usd-change {{trendYesterday.class}}">({{trendYesterday.type}} ${{trendYesterday.change}})</span>
          </div>
          <div class="trend-activity trends-percent">
              <p class="description">Last 7 days</p>
              <p class="title {{trendLastWeek.class}} ">{{trendLastWeek.type}} {{trendLastWeek.percentChange}}% </p>
              <span class="trend-usd-change {{trendLastWeek.class}}">({{trendLastWeek.type}} ${{trendLastWeek.change}})</span>
          </div>
        </div>
        <hr/>
        <div class="trend-activity extra">
          <p class="description">Market Cap: </p>
          <p class="title">$<span class="nostyle" {{numberformat this.thetaSdk.prices.theta.market_cap 0}}></span></p>
                  <hr/>
          <p class="description">24h volume</p>
          <p class="title">$<span class="nostyle" {{numberformat this.thetaSdk.prices.theta.volume_24h 0}}></span></p>
                <hr/>
          <p class="description">Theta Staked</p>
          <p class="title"><span class="nostyle" {{numberformat this.thetaSdk.totalStake.percent 1}}></span>% (<span class="nostyle" {{numberformat this.thetaSdk.totalStake.totalAmount 0}}></span>)</p>
        </div>
      </div>
  </div>
</div>