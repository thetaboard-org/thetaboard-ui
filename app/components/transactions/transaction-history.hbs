<div class="card">
  <div class="card-header">
    <h4 class="card-title">{{t 'transaction_history.title'}}</h4>
  </div>
  <div class="card-body">
    <div class="table-responsive transac-history-table">
      <table class="table">
        <thead>
          <tr>
            <th class="text-center">{{t 'global.type'}}</th>
            <th class="text-center d-none d-sm-none d-md-table-cell">{{t 'global.block'}}</th>
            <th class="text-center">{{t 'transaction_history.age'}}</th>
            <th class="text-center d-none d-sm-none d-md-none d-lg-none d-xl-table-cell">{{t 'transaction_history.from'}}</th>
            <th class="text-center d-none d-sm-table-cell"></th>
            <th class="text-center d-none d-sm-none d-md-none d-lg-none d-xl-table-cell">{{t 'transaction_history.to'}}</th>
            <th class="text-center">{{t 'transaction_history.value'}}</th>
          </tr>
        </thead>
        <tbody>
          {{#each transactionList as |transaction|}}
            <tr>
            <td class="text-center transaction-type"><img src="{{rootURL}}assets/img/transactions/{{transaction.type}}.png"/> {{transaction.typeName}}</td>
            <td class="text-center d-none d-sm-none d-md-table-cell">{{transaction.blockHeight}}</td>
            <td class="text-center"><a href="{{explorerEndpoint}}/txs/{{transaction.txnHash}}" target="_blank">{{moment-from transaction.txTimestamp}}</a></td>
            <td class="text-center d-none d-sm-none d-md-none d-lg-none d-xl-table-cell">
              <LinkTo {{shortener transaction.fromAddress}} @route="wallet" @query={{hash group=null wa=transaction.fromAddress}}>{{transaction.fromAddress}}</LinkTo>
            </td>
            <td class="text-center d-none d-sm-table-cell" id="in-or-out"><img src="assets/img/transaction-{{transaction.inOrOut}}.png"/></td>
            <td class="text-center d-none d-sm-none d-md-none d-lg-none d-xl-table-cell">
              <LinkTo {{shortener transaction.toAddress}} @route="wallet" @query={{hash group=null wa=transaction.toAddress}}>{{transaction.toAddress}}</LinkTo>
            </td>
            <td class="text-left td-value">
              {{#each transaction.values as |coin|}}
                <div>
                  <img src="assets/img/logo/{{coin.type}}.png" class="img-fluid rounded-circle" style="width: 20px;" alt="logo"/>
                  <span class="coin-amount"><span class="nostyle" {{numberformat coin.amount 3}}></span> <span class="capitalize">{{coin.type}}</span> </span>
                  <span class="coin-value">[$<span class="nostyle" {{numberformat coin.value 2}}></span>]</span>
                </div>
              {{/each}}
            </td>
          </tr>
          {{else}}
            <p>{{t 'transaction_history.no_transaction'}}</p>
          {{/each}}
        </tbody>
      </table>
      {{#if showPagination}}
      <PaginationPager @pager={{true}} @count={{this.thetaSdk.pagination.totalPageNumber}} @current={{this.thetaSdk.pagination.currentPageNumber}} @change={{this.pageChanged}} @pagerFirst="|<" @pagerLast=">|" >
        {{this.thetaSdk.pagination.currentPageNumber}} of {{this.thetaSdk.pagination.totalPageNumber}}
      </PaginationPager>
      {{/if}}
    </div>
  </div>
</div>
