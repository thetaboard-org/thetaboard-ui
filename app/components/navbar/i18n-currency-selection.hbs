<li class="dropdown nav-item paddingtop">
    <a href="javascript:void(0)" class="dropdown-toggle nav-link" data-toggle="dropdown" aria-expanded="false">
        <div class="d-none d-lg-block d-xl-block"><span class="language-selector i18n-selector i18n-authenticated">{{i18n.currentLocale.name}}/{{currency.currentCurrency.name}}</span></div>
        <div class="d-lg-none language-small-button ">
            <span class="i18n-color i18n-selector">{{i18n.currentLocale.shortName}}/{{currency.currentCurrency.symbol}}</span>
        </div>
    </a>
    <div class="dropdown-menu dropdown-menu-left dropdown-navbar">
        <div class="split-i18n-currency">
            <p class="title">{{t "locale.language"}}</p>
            {{#each this.i18n.localeList as |locale|}}
                <p {{on 'click' (fn this.setLocale locale.value)}} class="nav-link"><a href="#" class="nav-item dropdown-item">{{locale.name}}</a></p>
            {{/each}}
        </div>
        <div class="split-i18n-currency-separator">
        </div>
        <div class="split-i18n-currency">
            <p class="title">{{t "currency.currency"}}</p>
            {{#each this.currency.currencyList as |currency|}}
                <p {{on 'click' (fn this.setCurrency currency.value)}} class="nav-link"><a href="#" class="nav-item dropdown-item">{{currency.name}}</a></p>
            {{/each}}
        </div>
    </div>
</li>