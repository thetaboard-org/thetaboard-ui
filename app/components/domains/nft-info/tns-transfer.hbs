{{#if transfered}}
{{else}}
    {{#if transferPanel}}
        <p>{{t 'global.transfer'}}</p>
        <p></p>
        <Input {{on "keyup" domain.inputHandler}} @placeholder="{{t 'domain.transfer_placeholder'}}" @type="text" class="form-control border-color input-domain-transfer-address"
         @value={{addressTo}}/>
        {{#if domain.addressLookup}}
            <p class="lookup-address-transfer">{{domain.addressLookup}}</p>
            <p></p>
        {{/if}}
        <p></p>
        {{#if commitingToTransfer}}
        {{else}}
            <img class="btn-icon-global right-margin" {{on 'click' toggleTransferPanel}} src="/assets/img/cancel-small.png" />
        {{/if}}
            {{#if transfering}}
                <img width="40" src="/assets/img/loader-square-fixed-small.png" />
            {{else if commitingToTransfer}}
                <img width="40" src="/assets/img/see-mm-small.png" />
            {{else}}
                <img class="btn-icon-global" {{on 'click' transfer}} src="/assets/img/ok-small.png" />
            {{/if}}
    {{else}}
        <img class="cursor float" {{on 'click' toggleTransferPanel}} src="/assets/img/transfer-small.png"/>
    {{/if}}
{{/if}}
