
{{#if nameTransfered}}
    <div class="alert alert-success buy-domain">
        <span><b> {{domainName}}.theta </b> {{t 'domain.domain_transfered'}} 
        {{#if nameToFrom}}
            <b>{{nameToFrom}} ({{addressToFrom}})</b>
        {{else}}
            <b>{{addressToFrom}}</b>
        {{/if}}
        </span>
    </div>
    <button {{on "click" refreshPage}}  class="btn btn-primary">{{t 'domain.see_domain'}}</button>
{{else if reclaimed}}
    <div class="alert alert-success buy-domain">
        <span>{{t 'domain.domain_reclaimed'}} <b> {{domainName}}.theta </b></span>
    </div>
    <button {{on "click" refreshPage}}  class="btn btn-primary">{{t 'domain.see_domain'}}</button>
{{else if reversed}}
    <div class="alert alert-success buy-domain">
        <span><b> {{domainName}}.theta </b> {{t 'domain.domain_reversed'}}</span>
    </div>
    <button {{on "click" refreshPage}}  class="btn btn-primary">{{t 'domain.see_domain'}}</button>
{{else}}
    {{#if isOwner}}
        <div class="alert alert-success buy-domain">
            <span><b>{{t 'domain.own_domain'}} {{domainName}}.theta</b></span>
        </div>
        {{#if transferForm}}
            <div class="">
                <Input {{on "keyup" checkAddressToName}} @placeholder="{{t 'domain.transfer_placeholder'}}" @type="text" class="form-control border-color input-domain-transfer-address" @value={{transferToAddress}}/>
                {{#if transferLookup}}
                    <p class="lookup-address-transfer">{{transferLookup}}</p>
                    <p></p>
                {{/if}}
                {{#if commitingToTransfer}}
                {{else}}
                    <button class="btn btn-secondary" {{on 'click' cancelTransferForm}}>{{t 'global.cancel'}}</button>
                {{/if}}
                <button class="btn btn-primary {{if commitingToTransfer 'disabled'}}" {{on 'click' transferDomain}}>
                    {{#if transferName}}
                        {{t 'domain.transaction_pending'}}
                    {{else if commitingToTransfer}}
                        {{t 'domain.check_metamask'}}
                    {{else}}
                        {{t 'global.submit'}}
                    {{/if}}
                </button>
            </div>
        {{else if reverseNameForm}}
            <p>{{t 'domain.about_to_reverse_name'}} <span class="bold">{{domainName}}.theta</span> {{t 'domain.to_address'}}</p>
            <p>{{metamask.currentAccount}}</p>
            {{#if commitingToReverse}}
            {{else}}
                <button class="btn btn-secondary" {{on 'click' cancelReverseName}}>{{t 'global.cancel'}}</button>
            {{/if}}
            <button class="btn btn-primary {{if commitingToReverse 'disabled'}}" {{on 'click' setReverseName}}>
                {{#if reversing}}
                    {{t 'domain.transaction_pending'}}
                {{else if commitingToReverse}}
                    {{t 'domain.check_metamask'}}
                {{else}}
                    {{t 'global.submit'}}
                {{/if}}
            </button>
        {{else}}
            {{#if canTransfer}}
                <button class="btn btn-primary" {{on 'click' openTransferForm}}>{{t 'domain.transfer'}}</button>
            {{/if}}
            {{#if canReverseName}}
                <button class="btn btn-primary" {{on 'click' openReverseNameForm}}>{{t 'domain.set_reverse_name'}}</button>
            {{/if}}
        {{/if}}
    {{else}}
        <div class="alert alert-warning buy-domain">
            <span><b> {{domainName}}.theta </b> {{t 'domain.already_registered'}}</span>
        </div>
        {{#if didTransfer}}
            <p>{{t 'domain.did_transfer'}}</p>
            {{#if nameToFrom}}
                <p><span class="bold">{{nameToFrom}}</span></p>
            {{else}}
                <p><span class="bold">{{addressToFrom}}</span></p>
            {{/if}}
        {{else if canReclaim}}
            {{#if nameToFrom}}
                <p><span class="bold">{{nameToFrom}}</span> {{t 'domain.claim_transfer'}}</p>
            {{else}}
                <p><span class="bold">{{addressToFrom}}</span> {{t 'domain.claim_transfer'}}</p>
            {{/if}}
            <button class="btn btn-primary {{if commitingToReclaim 'disabled'}}" {{on 'click' reclaimDomain}}>
                {{#if reclaiming}}
                    {{t 'domain.transaction_pending'}}
                {{else if commitingToReclaim}}
                    {{t 'domain.check_metamask'}}
                {{else}}
                    {{t 'domain.claim'}}
                {{/if}}
            </button>
        {{/if}}
    {{/if}}
{{/if}}